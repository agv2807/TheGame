<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/players_list"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_margin="20dp">

        </androidx.recyclerview.widget.RecyclerView>

        <EditText
            android:id="@+id/enter_name_et"
            android:hint="Вводи имя"
            android:padding="10dp"
            android:background="@drawable/round_corners"
            android:layout_margin="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/add_new_player_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:background="@drawable/round_corners"
            android:text="Добавить игрока"
            app:backgroundTint="#0CB501" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="@drawable/round_corners"
            android:text="Правила просты: выполняй задания - получай очки, не выполнил задание - получи статью"
            android:layout_margin="20dp"/>

        <Button
            android:id="@+id/start_btn"
            android:background="@drawable/round_corners"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="Начать"
            android:textStyle="bold" />

    </LinearLayout>

</RelativeLayout>